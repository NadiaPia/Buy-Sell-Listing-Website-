<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Sell Your Art</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/icon_font.css" />
    <link rel="stylesheet" href="./styles/main.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900"
      rel="stylesheet"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <!-- <script type="text/javascript" src="/scripts/app.js"></script> -->
    <script
      src="https://kit.fontawesome.com/8caf2b2a17.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('partials/_navbar') %>
    <!-- start of header -->
    <header class="sellers-header">
      <div class="sellers-header__logo-box">
        <img
          src="../img/artificial-intelligence-icon-png-14762.png"
          alt="site logo"
          class="sellers-header__logo"
        />
      </div>
      <div class="sellers-header__text-box">
        <h1 class="sellers-heading-primary">
          <span class="sellers-heading-primary--main">Broker your art</span>
          <span class="sellers-heading-primary--sub">change the world</span>
        </h1>
        <a href="/post" class="sellers-btn btn btn--white btn--animated"
          >Post your art</a
        >
      </div>
    </header>
    <!-- end of header -->
    <main>
      <section class="section-sellers-art">
        <div class="u-center-text u-margin-bottom-big">
          <h2 class="sellers-heading-secondary">our featured art</h2>
        </div>
        <!-- start of featured -->
        <section class="section-featured">
          <% for(let feature of featured) { %>
          <!-- start of card -->
          <article class="ai-card">
            <div class="ai-card__img-box">
              <img
                src="<%= feature.photo %>"
                class="ai-card__img"
                alt="dhjdhdhjdjd"
              />
            </div>
            <div class="ai-card__desc-box">
              <p class="ai-card__p"><%= feature.name %></p>
              <span class="artist"><%= feature.user_name %></span>
            </div>
            <div class="ai-card__sizes">
              <h4 class="ai-card-avail">availible in</h4>
              <div class="poster">
                <div class="post-price"><%= feature.price %></div>
              </div>
              <div class="ai-card__favorite">
                <i class="fa-solid fa-heart"></i>
              </div>
            </div>
            <button class="ai-card-btn btn btn--white">
              <a href="/contact/<%= feature.email%>">Contact seller</a>
            </button>
          </article>
          <% } %>
          <!-- end of card-->
        </section>
        <!-- end of featured -->
        <div class="u-center-text u-margin-bottom-big">
          <h2 class="sellers-heading-secondary">Acclaim Artists</h2>
        </div>
        <!-- start of All -->
        <section class="section-all">
          <!-- start of card -->
          <% for(let card of cards) { %> <% if(card.seller_id != 2) { %>
          <!-- start of card -->
          <article class="ai-card">
            <div class="ai-card__img-box">
              <img
                src="<%= card.photo %>"
                class="ai-card__img"
                alt="dhjdhdhjdjd"
              />
            </div>
            <div class="ai-card__desc-box">
              <p class="ai-card__p"><%= card.name %></p>
              <span class="artist"><%= card.user_name %></span>
            </div>
            <div class="ai-card__sizes">
              <h4 class="ai-card-avail">availible in</h4>
              <div class="poster">
                <div class="post-price"><%= card.price %></div>
              </div>
              <div class="ai-card__favorite">
                <i class="fa-solid fa-heart"></i>
              </div>
            </div>
            <button class="ai-card-btn btn btn--white">
              <a href="/contact/<%= card.email%>">Contact seller</a>
            </button>
          </article>
          <% } %> <% } %>
          <!-- end of card-->
        </section>
        <!-- end of of all -->
        <!-- start of sellers art -->
        <div class="u-center-text u-margin-bottom-big">
          <h2 class="sellers-heading-secondary">Your Art</h2>
        </div>
        <section class="section-sell-art">
          <!-- start of card -->
          <% for(let art of userArt) { %>
          <!-- start of card -->
          <article class="ai-card">
            <div class="ai-card__img-box">
              <img
                src="<%= art.photo %>"
                class="ai-card__img"
                alt="dhjdhdhjdjd"
              />
            </div>
            <div class="ai-card__desc-box">
              <p class="ai-card__p"><%= art.name %></p>
              <span class="artist"><%= art.user_name %></span>
            </div>
            <div class="ai-card__sizes">
              <h4 class="ai-card-avail">availible in</h4>
              <div class="poster">
                <div class="post-price"><%= art.price %></div>
              </div>
            </div>
          </article>
          <% } %>
          <!-- end of card-->
        </section>
        <!-- end of sellers art -->
        <div class="u-center-text u-margin-bottom-huge"></div>
      </section>
    </main>
    <footer class="footer">
      <ul class="social-icons" id="footer-icons">
        <!-- single item -->
        <li>
          <a href="https://www.facebook.com" class="social-icon">
            <i class="fa-brands fa-square-facebook"></i>
          </a>
        </li>
        <!-- end of single item -->
        <!-- single item -->
        <li>
          <a href="https://www.twitter.com" class="social-icon">
            <i class="fa-brands fa-linkedin"></i>
          </a>
        </li>
        <!-- end of single item -->
        <!-- single item -->
        <li>
          <a href="https://www.twitter.com" class="social-icon">
            <i class="fa-brands fa-squarespace"></i>
          </a>
        </li>
        <!-- end of single item -->
        <!-- single item -->
        <li>
          <a href="https://www.twitter.com" class="social-icon">
            <i class="fa-brands fa-behance"></i>
          </a>
        </li>
        <!-- end of single item -->
        <!-- single item -->
        <li>
          <a href="https://www.twitter.com" class="social-icon">
            <i class="fa-brands fa-instagram"></i>
          </a>
        </li>
        <!-- end of single item -->
      </ul>

      <p>&copy; <span id="date"></span> Acclaim. All rights reserved.</p>
    </footer>
  </body>
</html>
