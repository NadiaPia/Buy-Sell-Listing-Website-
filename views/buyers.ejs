<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Buy Art</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/icon_font.css" />
    <link rel="stylesheet" href="./styles/main.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900"
      rel="stylesheet"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>
  <body>
    <%- include('partials/_navbar') %>
    <!-- header -->
    <header class="buyers-header">
      <div class="buyers-header__logo-box">
        <img
          src="../img/artificial-intelligence-icon-png-14762.png"
          alt="site logo"
          class="buyers-header__logo"
        />
      </div>
      <div class="buyers-header__text-box">
        <h1 class="buyers-heading-primary">
          <span class="buyers-heading-primary--main">Browse and Buy</span>
          <span class="buyers-heading-primary--sub"
            >discover your next conversation piece</span
          >
        </h1>
        <a href="#" class="buyers-btn btn btn--white btn--animated"
          >Discover Your Next masterpeice</a
        >
      </div>
    </header>
    <!-- end of header -->
    <main>
      <section class="section-buyers-art">
        <div class="u-center-text u-margin-bottom-big">
          <h2 class="sellers-heading-secondary">our featured art</h2>
        </div>
        <section class="section-featured">
          <!-- start of featured -->
          <!-- start of card  -->
          <article class="ai-card">
            <div class="ai-card__img-box">
              <img src="./img/sufi09.png" class="ai-card__img" alt="card img" />
            </div>
            <h3 class="ai-card__h3">DIVE INTO THE WOODS</h3>
            <div class="ai-card__desc-box">
              <p class="artist">username</p>
              <p class="price">$100</p>
              <p class="ai-card-avail">availible</p>
            </div>
            <button class="ai-card-btn">
              <a href="#">Contact seller</a>
            </button>
          </article>
          <!-- end of card -->
          <!-- end of featured -->
        </section>
        <!-- start of All -->
        <section class="section-all">
          <!-- start of card  -->
          <article class="ai-card">
            <div class="ai-card__img-box">
              <img src="./img/sufi09.png" class="ai-card__img" alt="card img" />
            </div>
            <h3 class="ai-card__h3">DIVE INTO THE WOODS</h3>
            <div class="ai-card__desc-box">
              <p class="artist">username</p>
              <p class="price">$100</p>
              <p class="ai-card-avail">availible</p>
            </div>
            <button class="ai-card-btn">
              <a href="#">Contact seller</a>
            </button>
          </article>
          <!-- end of card -->
        </section>
        <!-- end of of all -->

        <div class="u-center-text u-margin-bottom-huge">
          <a href="#" class="btn btn--green">Discover more</a>
        </div>
      </section>
    </main>
  </body>
</html>
